# EditorConfig is awesome: http://EditorConfig.org
# Copied from https://github.com/aspnet/Blazor/blob/dev/.editorconfig on 6/15/2018
# All Files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Solution Files
[*.sln]
indent_style = tab

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Web Files
[*.{htm,html,js,ts,css,scss,less}]
insert_final_newline = true
indent_size = 2

# Differs from Blazor version of this file here:
# Style Settings are done with the CodeRush or ReSharper tools